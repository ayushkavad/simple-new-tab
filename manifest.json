{
  "manifest_version": 3,
  "name": "Simple New Tab",
  "version": "0.2",
  "description": "Simple Tab with Digital Clock",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.jpg",
      "32": "icons/icon32.jpg",
      "48": "icons/icon48.jpg",
      "64": "icons/icon64.jpg",
      "128": "icons/icon128.jpg",
      "256": "icons/icon256.jpg"
    },
    "default_title": "Simple New Tab",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.jpg",
    "32": "icons/icon32.jpg",
    "48": "icons/icon48.jpg",
    "64": "icons/icon64.jpg",
    "128": "icons/icon128.jpg",
    "256": "icons/icon256.jpg"
  }
}
